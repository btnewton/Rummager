<div class="container">
	<h2>Unlock Account</h2>
	<div class="row">
		<p class="flow-text col offset-s1 s10">Accounts are locked when too many log in attempts fail in a row. We can send you a link to unlock your account.</p>
	</div>

	<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

	  <div class="row">
	    <div class="field col s12 offset-m2 m8 offset-l3 l6">
	      <%= devise_error_messages! %>
	    </div>
	  </div>

	  <div class="row">
      <div class="field col s12 offset-m2 m8 offset-l3 l6">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true %>
		  </div>
	  </div>

	  <div class="row">
	    <div class="actions col s12 offset-m2 m4 offset-l3 l6">
		    <%= f.submit "Resend link", class: 'waves-effect btn red accent-2' %>
		  </div>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>