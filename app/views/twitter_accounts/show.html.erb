<div class="container">
	<div class="row">
		<div class="col s12 offset-m2 m8 offset-l2 l8">
			<%= render 'form', twitter_account: @twitter_account %>
		</div>
	</div>

	<% if @success %>
	<div class="row">
		<div class="col s12 offset-m2 m8 l4">
			<%= render 'profile', twitter_account: @twitter_account %>
			<%= render 'mentions', handles: get_handles(@twitter_account.get_tweets) %>
		</div>
		<div class="col s12 offset-m2 m8 l8">
			<div class="card-panel grey lighten-5 z-depth-1">
				<ol class="tweet-list">
					<% @twitter_account.get_tweets.each do |tweet| %>
						<li><%= render tweet %></li>
					<% end %>
				</ol>
			</div>
		</div>
	</div>
	<% else %>
	<div class="row center-align">
		Could not find the user <%= @twitter_account.screenname %> at this time
	</div>
	<% end %>
</div>
